<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.4"
        android:orientation="vertical"/>

    <ImageView
        android:id="@+id/ivItemImageRecycler1"
        android:layout_width="0dp"
        android:layout_height="130dp"
        android:paddingBottom="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/guideline1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/tvItemNameRecycler1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:layout_marginTop="5dp"
        android:text="ItemName"
        android:textColor="#000"
        android:paddingTop="5dp"
        android:paddingLeft="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/guideline1"/>

    <TextView
        android:id="@+id/tvItemPriceRecycler1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:text="ItemName"
        android:textColor="#000"
        android:paddingTop="5dp"
        android:paddingLeft="5dp"
        app:layout_constraintTop_toBottomOf="@id/tvItemNameRecycler1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/guideline1"/>

    <TextView
        android:id="@+id/tvWeight1"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="16dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/plus"
        android:textColor="@color/mobile_app_bar"/>

    <ImageView
        android:id="@+id/minus"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/minus"
        android:padding="2dp"
        app:layout_constraintTop_toTopOf="@id/tvWeight1"
        app:layout_constraintRight_toLeftOf="@id/tvWeight1"
        app:layout_constraintBottom_toBottomOf="@id/tvWeight1"/>

    <ImageView
        android:id="@+id/plus"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/plus"
        app:layout_constraintCircleRadius="50dp"
        android:layout_marginRight="20dp"
        android:padding="2dp"
        app:layout_constraintTop_toTopOf="@id/tvWeight1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tvWeight1"/>


</androidx.constraintlayout.widget.ConstraintLayout>